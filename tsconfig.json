{
    "compilerOptions": {
        "baseUrl": "src",
        "strict": true,
        "esModuleInterop": true,
        "jsx": "react",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "NodeNext",
        "paths": {
            "@components/*": ["components/*"],
            "@styles/*": ["styles/*"],
            "@features/*": ["features/*"],
            "@static/*": ["static/*"],
            "@icons/*": ["static/icons/*"],
            "@fonts/*": ["static/fonts/*"],
            "@providers/*": ["providers/*"],
            "@services/*": ["services/*"],
            "@pages/*": ["pages/*"],
            "@utils/*": ["utils/*"],
            "@types": ["types.ts"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
